---
import Footer from "./footer/index.astro";
import MainHeader from "./header";
import LogoImage from "../../assets/logos/Boules-Consulting-Logo.svg";
import BackgoundLogo from "../../assets/logos/Boules-Consulting-Logo-Big.svg";
import { Image } from "astro:assets";
import { NAV_MAP } from "@/lib/nav_schema";

const { title } = Astro.props;
const curPath = new URL(Astro.url).pathname;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Boules Consulting is a social impact consulting firm specializing in helping mission-driven initiatives achieve their goals. We work with government agencies, social enterprises, and small businesses to build a strong foundation and sustainable infrastructure to secure funding and launch their initiatives."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.theme.min.css"
    />

    <!-- Facebook Pixel Code -->
    <script>
      //@ts-nocheck
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = "2.0";
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        "script",
        "https://connect.facebook.net/en_US/fbevents.js",
      );
      fbq("init", "239465452534107");
      fbq("track", "PageView");
    </script>
    <noscript>
      <img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id='239465452534107'&ev=PageView&noscript=1"
      />
    </noscript>
    <!-- End Facebook Pixel Code -->

    <title>{title}</title>
  </head>
  <body>
    <MainHeader curPath={curPath} client:load>
      <a
        href={NAV_MAP.home}
        class="flex items-center gap-2 hover:underline text-primary"
      >
        <Image src={LogoImage} class="h-12 w-12" alt="Boules Consulting Logo" />
        <h1 class="font-medium text-xl">Boules Consulting</h1>
      </a>
    </MainHeader>
    <slot />
    <Image
      class="fixed top-0 left-0 right-0 bottom-0 w-screen max-w-7xl m-auto opacity-[0.03] -z-50 rotate-45"
      src={BackgoundLogo}
      alt="Large Background Logo"
    />
    <Footer />
  </body>
</html>
