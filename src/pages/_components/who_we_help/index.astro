---
import { Image } from "astro:assets";
import SocialEnterprisesImage from "@/assets/images/social_enterprises.jpg";
import { Button } from "@/components/ui/button";
import { NAV_MAP } from "@/lib/nav_schema";
import GovernmentAgenciesImage from "@/assets/images/government_agencies.jpg";
---

<section>
  <div class="px-4 max-w-screen-lg m-auto">
    <h1 class="text-2xl md:text-4xl font-medium text-center">Who We Help</h1>
    <div class="flex md:flex-row flex-col justify-center gap-4 py-12">
      <div class="card bg-secondary">
        <div class="se_image_wrap -translate-x-8 -translate-y-8">
          <Image
            class="se_mask"
            alt="Social Enterprises Image"
            src={SocialEnterprisesImage}
          />
        </div>
        <div class="-translate-y-2">
          <h1 class="text-3xl font-medium">Social Enterprises</h1>
          <p class="py-4">
            Weâ€™ll help you build your business infrastructure, get funding
            ready, and win government grants and contracts
          </p>
          <a href={NAV_MAP.socialEnterprises}>
            <Button>Learn More</Button>
          </a>
        </div>
      </div>

      <div class="card bg-primary text-primary-foreground">
        <div>
          <h1 class="text-3xl font-medium">Government Agencies</h1>
          <p class="py-4">
            We work with government agencies to complete their strategic plans,
            position themselves for funding, and win grants
          </p>
          <a href={NAV_MAP.governmentAgencies}>
            <Button variant="outline">Learn More</Button>
          </a>
        </div>
        <div class="ga_image_wrap translate-x-8 translate-y-12">
          <Image
            class="ga_mask"
            alt="Government Agencies Image"
            src={GovernmentAgenciesImage}
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .card {
    @apply relative w-full p-6 rounded shadow-lg overflow-clip;
  }

  .se_image_wrap {
    background-image: url("../../../assets/shapes/card_left_poly.svg");
    background-size: contain;
    background-repeat: no-repeat;
    filter: drop-shadow(24px 24px 40px rgba(118, 157, 162, 0.7));
  }

  .se_mask {
    mask: url("../../../assets/shapes/card_left_poly.svg");
    mask-repeat: no-repeat;
    mask-size: contain;
  }

  .ga_image_wrap {
    background-image: url("../../../assets/shapes/card_right_poly.svg");
    background-size: contain;
    background-repeat: no-repeat;
    filter: drop-shadow(-24px -24px 40px rgba(241, 245, 249, 0.4));
  }

  .ga_mask {
    mask: url("../../../assets/shapes/card_right_poly.svg");
    mask-repeat: no-repeat;
    mask-size: contain;
  }
</style>
